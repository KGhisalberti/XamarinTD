<?xml version="1.0" encoding="utf-8" ?>
<forms:BaseContentPage
    xmlns:forms="clr-namespace:Storm.Mvvm.Forms;assembly=Storm.Mvvm.Forms" xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Class="TD2.View.CommentPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="Please write your comment !"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Your comment"
                   Text="{Binding Comment}"
                   VerticalOptions="CenterAndExpand" />
            <Button Text="Valider"
                    Command="{Binding PostCommand}"
                    VerticalOptions="CenterAndExpand" />

        </StackLayout>
    </ContentPage.Content>
</forms:BaseContentPage>